apiVersion: v1
kind: Service
metadata:
  name: {{ .ServiceName }}-lb
  namespace: {{ .Namespace }}
  annotations:
    external-dns.alpha.kubernetes.io/hostname: "{{ .ServiceName }}.{{ .Domain }}"
spec:
  ports:
  {{- range .Ports }}
    - name: {{ .PortName }}
      port: {{ .Port }}
      targetPort: {{ .Port }}
      protocol: TCP
  {{- end }}
  type: LoadBalancer
  selector:
    kurtosistech.com/id: {{ .ServiceName }}
